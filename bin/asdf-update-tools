#!/usr/bin/env bash

set -e

declare -a tools=(
    "exa"
    "ripgrep"
    "bat"
    "fzf"
    "github-cli"
    "zoxide"
    "jq"
    "yq"
    "shellcheck"
    "shfmt"
    "delta"
    "lazygit"
    "fd"
)

for tool in "${tools[@]}"; do
    if [ "$tool" == "zoxide" ]; then
        # temporary fix
        asdf plugin add "$tool" https://github.com/iwataka/asdf-zoxide || true
    else
        asdf plugin add "$tool" || true
    fi
    asdf install "$tool" latest
    asdf global "$tool" latest
    asdf reshim "$tool"
done
