function fast_file_search() {
    local dir=$(echo $FFS_PATH | sed -e "s/:/\n/g" | peco)
    if [ ! -z "$dir" ]; then
        local file=$(eval "$FFS_COMMAND" "$dir" | peco)
        if [ ! -z "$file" ]; then
            eval $1 "$file"
        fi
    fi
}

export FFS_PATH=$HOME/lib/go/src
export FFS_PATH=$FFS_PATH:$HOME/lib/jdk/src

export FFS_COMMAND="ag --nocolor -g ''"

alias ffs=fast_file_search
